#Script for checking is there any change made in sudoers

#!/bin/bash

#In order to use this script sudo apt update && sudo apt install inotify-tools -y

check_dir="/etc/sudoers"
check_file="/var/log/sudoers_watch.log"

echo "Monitoring changes to sudoers file..."
 
inotifywait -m -e modify $check_dir |
while read path action file; do
    echo "$(date) - SUDOERS MODIFIED: $file" | tee -a $check_file
    echo "[!] ALERT: Unauthorized modification detected in /etc/sudoers!"
done
